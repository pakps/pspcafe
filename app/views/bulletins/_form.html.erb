<%= simple_form_for(@bulletin) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, input_html: { rorws: 5 } %>
    <%= f.input :post_type, collection:[['Bulletin', 'bulletin'], ['Blog', 'blog'], ['Gallery', 'gallery']] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
