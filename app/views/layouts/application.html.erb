<!DOCTYPE html>
<html>
	<head>
		<title>Rcafe</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to raw('Simple<i>Cafe</i>'), root_path, class: 'navbar-brand' %>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li class="<%= params[:bulletin_id] == 1 ? 'active' : '' %>">
							<%= link_to raw('AboutUS'), bulletin_posts_path(1) %>
						</li>
						<li class="<%= params[:bulletin_id] == 2 ? 'active' : '' %>">
							<%= link_to raw('News'), bulletin_posts_path(2) %>
						</li>
						<li class="<%= params[:bulletin_id] == 3 ? 'active' : '' %>">
							<%= link_to raw('Blog'), bulletin_posts_path(3) %>
						</li>
						<li class="<%= params[:bulletin_id] == 4 ? 'active' : '' %>">
							<%= link_to raw('Docs'), bulletin_posts_path(4) %>
						</li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>

		<div class="container">
			<%= render partial: "shared/flash_messages", flash: flash %>
			
			<%= yield %>
		</div>
		<!-- /container -->
	</body>
</html>
